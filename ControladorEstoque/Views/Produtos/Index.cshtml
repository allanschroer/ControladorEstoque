@model IEnumerable<ControladorEstoque.Models.Produto>

@{
    ViewData["Title"] = "Produtos";
}

<h1>Produtos:</h1>

<p>
    <a asp-action="Create">Adicionar novo produto</a>
</p>
<form method="post" action="/Produtos">
    <label>
        Procurar pelo nome:
        <input /><input type="submit" value="Filtro" />
    </label>
    @{
        TempData["msg"] = "<script>alert('Change succesfully');</script>"; 
        }

</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>Valor total em estoque</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            double ValorToral = item.Quantidade * item.Valor;
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantidade)
                </td>
                <td>
                    @ValorToral 
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" onclick="@Html.Raw(TempData["msg"])">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
